<script>

// greeting function //

	function mySubmit()
	{ var x = document.getElementById("first-name").value;
	window.alert('Hi,'+ x +',Thank you for Registering!');
	}
	
	// fuction to ask you to enter password //
	function focusFuction() {
	
	 var y = document.getElementById("Password").value;
	 var text;
	 if (y == "")
	 {
	   text = "Please enter password";
	   document.getElementById("demo").innerHTML = text;
	   return false;
	 }
	 else {
	 document.getElementById("Password").style.background= "yellow";
	 }
	 return true;
	}
	
</script>
